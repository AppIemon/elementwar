{
  "name": "element-battle",
  "version": "1.0.0",
  "description": "원소 대전 - 화학 원소 카드 배틀 게임",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:local": "powershell -Command \"if (Test-Path vercel.json) { Move-Item vercel.json vercel.json.bak }; nodemon server.js\"",
    "build": "echo 'No build step required'",
    "vercel-build": "echo 'No build step required'",
    "cleanup": "node cleanup-code.js",
    "cleanup:no-backup": "node cleanup-code.js --no-backup",
    "cleanup:simple": "node cleanup-simple.js",
    "cleanup:simple:no-backup": "node cleanup-simple.js --no-backup"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
