    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "gh-pages": "^6.3.0",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "game",
    "chemistry",
    "elements",
    "battle",
    "ai"
